<h3 style="text-align:center;">Enter information</h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @place do |f| %>
      <div class="form-group">
        <%= f.label :status, "Select" %>
        <%= f.select :status, options_for_select(["hotel", "restaurant"]), {prompt: "- Select -"}, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter place name" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control", placeholder: "Enter description", rows:"5" %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control", placeholder: "Enter address" %>
      </div>
      <div class="form-group" style="width: 110px;">
        <%= f.label :vote %>
        <%= f.select :vote, options_for_select([1, 2, 3, 4, 5]), {prompt: "- Select -"}, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :cost, "Cost (VND)" %>
        <%= f.text_field :cost, class: "form-control", placeholder: "Enter cost" %>
      </div>
      <%= f.label :photo %>
      <%= f.file_field :photo %>
      <%= f.submit "Submit", class:"btn btn-primary" %>
    <% end %>
  </div>
</div>
