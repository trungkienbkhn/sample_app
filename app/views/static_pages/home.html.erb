<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <% provide :title, t(".home") %>
  <div class="center jumbotron">
    <h1><%= t ".welcome" %></h1>

    <h2>
      <%= t ".homepage" %>
      <%= link_to "Ruby on Rails Tutorial", "https://www.railstutorial.org/book" %>
      <%= t ".appli" %>
    </h2>

    <%= link_to t(".sign"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <div style="text-align:center;">
    <%= link_to image_tag("cat.jpg", alt: "Rails logo"),
      "https://i.pinimg.com/564x/3f/f9/eb/3ff9ebc1e828f4aacae02bc06f605ba3.jpg" %>
  </div>
<% end %>
