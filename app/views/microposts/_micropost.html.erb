<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.micropost.size_gravatar),
    micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t ".posted" %> <%= time_ago_in_words(micropost.created_at) %> <%= t ".ago" %>.
    <% if current_user?(micropost.user) %>
      <%= link_to t(".delete"), micropost, method: :delete,
        data: { confirm: t(".you_sure") } %>
    <% end %>
  </span>
  <%= form_for [micropost, @comment], remote: true do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="text-comment">
      <%= f.text_field :content, placeholder: "Add comment", class: "form-control",
        id: "comment-content-#{micropost.id}" %>
    </div>
    <%= f.submit "Comment", class: "btn btn-primary" %>
  <% end %><br>
  <i class="far fa-thumbs-up fa-2x"></i>
  <i class="far fa-comment fa-2x"></i>
  <span id="comment-count-<%= micropost.id %>">
    <%= micropost.comments.count %></i>
  </span>
  <div class="comments-list" id="comments-<%= micropost.id %>">
    <%= render micropost.comments, micropost: micropost %>
  </div>
</li>
